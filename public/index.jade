doctype html
html.full(lang='en' ng-app='trainingBuddy')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title Training Buddy
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='bower_components/html5-boilerplate/dist/css/normalize.css')
    link(rel='stylesheet', href='bower_components/html5-boilerplate/dist/css/main.css')
    link(rel='stylesheet', href='bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet', href='./styles/app.css')
    link(rel='stylesheet', href='./styles/cover.css')
    script(src='bower_components/html5-boilerplate/dist/js/vendor/modernizr-2.8.3.min.js')
  body(ng-controller='MainCtrl')
    .site-wrapper
      .site-wrapper-inner
        .cover-container
          .masthead.clearfix
            .inner
              h3.masthead-brand Training Buddy
              nav
                ul.nav.masthead-nav
                  li(ng-class="{active: isActive('/new')}")
                    a(href='#/new') New
                  li(ng-class="{active: isActive('/statistics')}")
                    a(href='#/statistics') Statistics
                  li
                    a(href='#') Account
          .inner.cover
            ng-view
          .mastfoot
            .inner
              p May the force be with you.
    //
      In production use:
      <script src="//ajax.googleapis.com/ajax/libs/angularjs/x.x.x/angular.min.js"></script>
    script(src='bower_components/angular/angular.js')
    script(src='bower_components/angular-route/angular-route.js')
    script(src='bower_components/jquery/dist/jquery.js')
    script(src='bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='bower_components/angular-bootstrap/ui-bootstrap.js')
    script(src='./src/app.js')
    script(src='./src/newWorkout/newWorkout.js')
    script(src='./src/statistics/statistics.js')